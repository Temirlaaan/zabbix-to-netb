{
  "zabbix": {
    "url": "${ZABBIX_URL}",
    "username": "${ZABBIX_USER}",
    "password": "${ZABBIX_PASSWORD}",
    "timeout": 30,
    "verify_ssl": false
  },
  
  "netbox": {
    "url": "${NETBOX_URL}",
    "token": "${NETBOX_TOKEN}",
    "timeout": 30,
    "verify_ssl": false
  },
  
  "redis": {
    "host": "${REDIS_HOST:localhost}",
    "port": "${REDIS_PORT:6379}",
    "db": "${REDIS_DB:0}",
    "password": "${REDIS_PASSWORD:}",
    "ttl_hours": 24,
    "key_prefix": "zabbix_netbox_sync"
  },
  
  "sync": {
    "batch_size": 50,
    "max_workers": 5,
    "dry_run": false,
    "continue_on_error": true,
    "mark_offline_days": 7,
    "custom_fields": {
      "last_seen_in_zabbix": true,
      "zabbix_hostid": true,
      "sync_source": true,
      "zabbix_alias": true,
      "zabbix_os_full": true
    }
  },
  
  "sources": {
    "zabbix_groups": {
      "network": [
        "Network/DataCenter/Karagandy",
        "Network/DataCenter/Atyrau",
        "Network/DataCenter/Astana-Konaeva",
        "Network/DataCenter/Astana-Kabanbay",
        "Network/DataCenter/Almaty",
        "Network/DataCenter-AO-NIT/Astana-MSK-STSGO",
        "Network/DataCenter/All-Servers-Network"
      ],
      "servers": [
        "All-Servers/DataCenter/Hosts/Karaganda",
        "All-Servers/DataCenter/Hosts/Almaty",
        "All-Servers/DataCenter/Hosts/Atyrau",
        "All-Servers/DataCenter/Hosts/Astana-Konaeva",
        "All-Servers/DataCenter/Hosts/Astana-Kabanbay"
      ],
      "storage": [
        "DataStore/DataCenter/Karagandy",
        "DataStore/DataCenter/Almaty",
        "DataStore/DataCenter/Atyrau",
        "DataStore/DataCenter/Astana-Konaeva",
        "DataStore/DataCenter/Astana-Kabanbay"
      ]
    }
  },
  
  "location_mapping": {
    "prefixes": {
      "krg": "DC Karaganda",
      "karaganda": "DC Karaganda",
      "karagandy": "DC Karaganda",
      "atr": "DC Atyrau",
      "atyrau": "DC Atyrau",
      "ast": "DC Astana",
      "astana-konaeva": "DC Konaeva10",
      "konaeva": "DC Konaeva10",
      "astana-kabanbay": "DC Kabanbay-Batyr28",
      "kabanbay": "DC Kabanbay-Batyr28",
      "alm": "DC Almaty",
      "ala": "DC Almaty",
      "almaty": "DC Almaty"
    },
    "az_mapping": {
      "az01": "DC Konaeva10",
      "az02": "DC Kabanbay-Batyr28"
    },
    "default": "DC Almaty"
  },
  
  "role_mapping": {
    "network": {
      "patterns": {
        "edge-router": "Edge-Router",
        "edge-switch": "Edge-Switch",
        "spine": "Spine-Switch",
        "leaf": "Leaf-Switch",
        "mgmt": "MGMT-Switch",
        "colocation": "Colocation-Edge-Switch",
        "asud": "ASUD-Switch",
        "ao-nit": "AO-NIT-Switch"
      },
      "default": "Edge-Switch"
    },
    "servers": {
      "hypervisor_patterns": {
        "edge": "Edge-Cluster-Servers-All",
        "cloud-edge": "Edge-Cluster-Servers-All",
        "comp": "Compute-Cluster-Servers-All",
        "gen-cluster": "Compute-Cluster-Servers-All",
        "mgmt": "MGMT-Cluster-Servers-All",
        "hm-cluster": "MGMT-Cluster-Servers-All",
        "backup": "MGMT-Cluster-Servers-All",
        "vsbc": "Edge-Cluster-Servers-All"
      },
      "default": "Compute-Cluster-Servers-All"
    },
    "storage": {
      "patterns": {
        "netapp": "SHD-Cluster-All",
        "san": "SAN Switches - All"
      },
      "default": "SHD-Cluster-All"
    }
  },
  
  "manufacturer_mapping": {
    "dell": "Dell Technologies",
    "hp": "Hewlett Packard Enterprise",
    "hpe": "Hewlett Packard Enterprise",
    "lenovo": "Lenovo",
    "cisco": "Cisco Systems",
    "juniper": "Juniper Networks",
    "extreme": "Extreme Networks",
    "fortinet": "Fortinet",
    "huawei": "Huawei",
    "netapp": "NetApp",
    "vmware": "VMware"
  },
  
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file": "logs/sync_{date}.log",
    "console": true,
    "max_bytes": 10485760,
    "backup_count": 5
  },
  
  "monitoring": {
    "enabled": false,
    "prometheus_port": 9090,
    "metrics_path": "/metrics"
  }
}